# Email Configuration
# Copy this file to .env and fill in your actual values

# Email provider: 'sendgrid' or 'smtp'
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here
FROM_EMAIL=auxct@example.com

# SMTP Configuration (if using SMTP)
# SMTP server hostname (e.g., smtp.gmail.com for Gmail)
SMTP_HOST=smtp.example.com
# SMTP port (587 for TLS, 465 for SSL, 25 for unencrypted)
SMTP_PORT=587
# SMTP username (usually your email address)
SMTP_USER=your-email@example.com
# SMTP password (use app-specific password for Gmail)
SMTP_PASSWORD=your-password-here
